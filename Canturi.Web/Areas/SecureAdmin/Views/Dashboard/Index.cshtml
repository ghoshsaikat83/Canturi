@model Canturi.Models.BusinessEntity.Admin.DashBoardModels
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Areas/SecureAdmin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Dashboard
    </h1>
</section>

<section class="content">

    <div class="row">
        <div class="col-lg-3 col-xs-6">

            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Model.TotalOrderToday</h3>
                    <p>Total Order received today</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="/secureadmin/report/order" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@Model.TotalOrderInMonth</h3>
                    <p>Total Order monthly</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/secureadmin/report/order" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@Model.TotalOrderInYear</h3>
                    <p>Total Order yearly</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/secureadmin/report/order" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@Model.TotalOrder</h3>
                    <p>Total Availability</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="/secureadmin/report/RequestAvailability" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Top 20 New Order request</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                            <div class="col-sm-12" >
                                @Html.Raw(ViewBag.Top20NewOrderRequest)
                            </div>
                        </div>                        
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->

            
        </div>
    </div>
</section>
@section scripts{

    <script src="@Url.Content("~/Areas/SecureAdmin/Content/dist/js/pages/dashboard.js")"></script>
<script src="@Url.Content("~/Areas/SecureAdmin/Content/plugins/jQuery/jQuery-2.1.4.min.js")"></script>    
    }