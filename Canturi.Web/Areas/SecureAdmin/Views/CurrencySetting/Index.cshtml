@{
    ViewBag.Title = "Currency setting";
    Layout = "~/Areas/SecureAdmin/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .style1 {
        height: 30px;
    }

    .style2 {
        height: 39px;
    }

    .style3 {
        height: 127px;
    }
</style>


<section class="content-header">
    <h1>
        Currency setting
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">


        <li><a href="@Url.Content("~/SecureAdmin/DashBoard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Currency setting</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">        
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">
                    Currency setting
                </h3>
            </div>

            @using (Html.BeginForm())
            {
                <div class="box-body" style="width: 50%;">
                    <div class="form-group">
                        @Html.Label("Usd = 1")                        
                    </div>
                    <div class="form-group">
                        @Html.Label("In Aud")
                        <span class="asterisk">*</span>
                        <input type="text" class="form-control" placeholder="Enter currency in aud" value="@ViewBag.InAud" name="InAud" id="InAud" />                               
                    </div>
                    <div class="form-group">
                        @Html.Label("In Euro")
                        <span class="asterisk">*</span>
                        <input type="text" class="form-control" placeholder="Enter currency in euro" value="@ViewBag.InEuro" id="InEuro" name="InEuro" />                                                       
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</section>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
<script src="@Url.Content("~/Areas/SecureAdmin/Content/js/bootstrap.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/SecureAdmin/Content/js/AdminLTE/app.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
