@model Canturi.Models.BusinessEntity.Admin.CaratSizeSettingModel
@using ASPRazorWebGridSample.UI;
@{
    ViewBag.Title = "Carat Size Setting";
    Layout = "~/Areas/SecureAdmin/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .style1 {
        height: 30px;
    }

    .style2 {
        height: 39px;
    }

    .style3 {
        height: 127px;
    }
</style>
<section class="content-header">
    <h1>
        Manage Carat Size Setting
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/SecureAdmin/DashBoard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Manage Carat Size Setting</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        @if (@Model.IsShowMessage == 1)
        {
            if (@Model.MessageClass.ToLower() == "MsgGreen".ToLower())
            {
                <div class="alert alert-success alert-dismissable">
                    <i class="fa fa-check"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        &times;
                    </button>
                    @Model.Message
                </div>
            }
            else if (@Model.MessageClass.ToLower() == "MsgRed".ToLower())
            {
                <div class="alert alert-danger alert-dismissable">
                    <i class="fa fa-ban"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        &times;
                    </button>
                    @Model.Message
                </div>
            }
            else
            {
                <div class="alert alert-success alert-dismissable">
                    <i class="fa fa-check"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        &times;
                    </button>
                    @Model.Message
                </div>
            }
        }
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1-1" data-toggle="tab">Carat Size Setting</a></li>

            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1-1">
                    <div class="col-xs-12">
                        <div class="box box-primary" id="divEdit" style="display:none;">
                            @using (Html.BeginForm())
                            {
                                @Html.HiddenFor(x => x.CaratSizeSetting)
                                <div class="box-body" style="width: 50%;">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.MinimumCaratSize)
                                        <span class="asterisk">*</span>
                                        @Html.TextBoxFor(m => m.MinimumCaratSize, new { @class = "form-control", @placeholder = "Enter minimum carat size" })
                                        @Html.ValidationMessageFor(m => m.MinimumCaratSize)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.MaximumCaratSize)
                                        <span class="asterisk">*</span>
                                        @Html.TextBoxFor(m => m.MaximumCaratSize, new { @class = "form-control", @placeholder = "Enter maximum carat size" })
                                        @Html.ValidationMessageFor(m => m.MaximumCaratSize)
                                    </div>

                                </div>
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">
                                        Submit
                                    </button>
                                    <a href="@Url.Content("~/SecureAdmin/CaratSizeSetting")" class="btn btn-default">Cancel</a>
                                </div>
                            }
                        </div>
                        <div class="box">
                            <div class="box-body table-responsive">
                                <table class="table table-bordered table-hover" id="activeTable">
                                    <thead>
                                        <tr class="head">
                                            <th style="width: 50px;text-align: center;">S.No.</th>
                                            <th style="text-align: Left;">Minimum Carat Size</th>
                                            <th style="text-align: Left;">Maximum Carat Size</th>
                                            <th style="text-align: center;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td style="width: 50px;text-align: center;">1</td>
                                            <td style="text-align: Left;">@Model.MinimumCaratSize</td>
                                            <td style="text-align: Left;">@Model.MaximumCaratSize</td>
                                            <td style="text-align: center;">
                                                <a title="Edit" href="javascript:void(0)" class="fa fa-fw fa-edit" onclick="FnShowEditBox()"></a>
                                            </td>
                                        </tr>


                                    </tbody>
                                </table>


                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="cl">
            </div>
        </div>



</section>
@section scripts{
    <script src="@Url.Content("~/Areas/SecureAdmin/Content/plugins/jQuery/jQuery-2.1.4.min.js")"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script type="text/javascript">
        function FnShowEditBox() {
            $("#divEdit").show();
        }
    </script>

}