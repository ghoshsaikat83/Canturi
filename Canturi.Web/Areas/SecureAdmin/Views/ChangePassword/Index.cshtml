@model  Canturi.Models.BusinessEntity.Admin.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/SecureAdmin/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .style1 {
        height: 30px;
    }

    .style2 {
        height: 39px;
    }

    .style3 {
        height: 127px;
    }
</style>


<section class="content-header">
    <h1>
        Change Password
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">


        <li><a href="@Url.Content("~/SecureAdmin/DashBoard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Change Password</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        @if (@Model.IsShowMessage == 1)
        {
            if (@Model.MessageClass.ToLower() == "MsgGreen".ToLower())
            {
                <div class="alert alert-success alert-dismissable">
                    <i class="fa fa-check"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        &times;
                    </button>
                    @Model.Message
                </div>
            }
            else if (@Model.MessageClass.ToLower() == "MsgRed".ToLower())
            {
                <div class="alert alert-danger alert-dismissable">
                    <i class="fa fa-ban"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        &times;
                    </button>
                    @Model.Message
                </div>
            }
            else
            {
                <div class="alert alert-success alert-dismissable">
                    <i class="fa fa-check"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        &times;
                    </button>
                    @Model.Message
                </div>
            }
        }
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">
                    Change Password
                </h3>
            </div>

            @using (Html.BeginForm())
            {
                <div class="box-body" style="width: 50%;">
                    <div class="form-group">
                        @Html.Label("Old Password")
                        <span class="asterisk">*</span>
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @placeholder = "Enter old password" })
                        @Html.ValidationMessageFor(m => m.OldPassword)
                    </div>
                    <div class="form-group">
                        @Html.Label("New Password")
                        <span class="asterisk">*</span>
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "Enter new password" })
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </div>
                    <div class="form-group">
                        @Html.Label("Re-Type Password")
                        <span class="asterisk">*</span>
                        @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", @placeholder = "Enter confirm new password" })
                        @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</section>
@section scripts{
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
<script src="@Url.Content("~/Areas/SecureAdmin/Content/js/bootstrap.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/SecureAdmin/Content/js/AdminLTE/app.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/SecureAdmin/Content/plugins/jQuery/jQuery-2.1.4.min.js")"></script>
    }