@model Canturi.Models.BusinessEntity.Admin.UserModels
@{
    ViewBag.Title = "Edit Admin User";
    Layout = "~/Areas/SecureAdmin/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<section class="content-header">
    <h1>
        Manage User
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/SecureAdmin/DashBoard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Manage User</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
<div class="row">
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">
                Edit Admin User</h3>
        </div>
        <div class="top-buttons-container">
            <a href="@Url.Content("~/SecureAdmin/User/List")"  class="btn btn-success">View</a> <a href="@Url.Content("~/SecureAdmin/User/Add")"  class="btn btn-info">
                Add</a>
        </div>
        @using (@Html.BeginForm())
        {
            <input type="hidden" value="@Model.RoleId" id="hidRoleId" name="hidData" />
            
            if (@Model.IsShowMessage == 1)
            {
            <div style="margin: 0pt 0px 25px;" class="box1" id="divMsgBox">
                <div class="box1-middle">
                    <p id="lblMsg">
                        @Model.Message
                    </p>
                </div>
                <div class="box1-bottom">
                    <div class="right">
                        <div class="middle">
                            &nbsp;</div>
                    </div>
                </div>
            </div>
            }
            <div class="box-body fix-width">
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName)
                    <span class="asterisk">*</span>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Enter first name" })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName)
                    <span class="asterisk">*</span>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Enter last name" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.EmailId)
                    <span class="asterisk">*</span>
                    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", @type = "email", @placeholder = "Enter email" })
                    @Html.ValidationMessageFor(m => m.EmailId)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName) <span class="asterisk">*</span>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Enter username" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)<span class="asterisk">*</span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", value = Model.Password, @placeholder = "Enter password" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword) <span class="asterisk">*</span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", value = Model.Password, @placeholder = "Enter confirm password" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.StoreId)
                    <span class="asterisk">*</span>
                    @Html.DropDownListFor(m => m.StoreId, new SelectList(Canturi.Models.BusinessHelper.CommonHelper.CommonData.ListStores(), "Value", "Text"), "Select store", new { @id = "ddlStore", @name = "my-dropdown", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.StoreId)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ListRole)
                    @Html.DropDownListFor(m => m.RoleId, new SelectList(Model.ListRole, "RoleId", "RoleName"), new { @id = "ddlUserRole", @name = "my-dropdown", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>
                        Status :</label>
                    @Html.DropDownListFor(m => m.Status, new SelectList(Model.ListStatus, "Value", "Text"), new { @id = "drpIsActive", @name = "my-dropdown-status", @class = "form-control" })
                </div>
            </div>                  
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">
                    Submit</button>
                <a href="@Url.Content("~/SecureAdmin/User/List")" class="btn btn-warning">
                    Cancel
                </a>
            </div>
                
        }
    </div>
</div>
</section>
@section scripts{
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        var roleId = $('#hidRoleId').val(); if (roleId == 1) {
            $("#drpIsActive").attr('disabled', 'disabled');
        }
    }); 
</script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/SecureAdmin/Content/js/bootstrap.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/SecureAdmin/Content/js/AdminLTE/app.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
}