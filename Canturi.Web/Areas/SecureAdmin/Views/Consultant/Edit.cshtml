@model Canturi.Models.BusinessEntity.Admin.ConsultantModels
@{
    ViewBag.Title = "Edit Consultant";
    Layout = "~/Areas/SecureAdmin/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .style1 {
        height: 30px;
    }

    .style2 {
        height: 39px;
    }

    .style3 {
        height: 127px;
    }
</style>
<section class="content-header">
    <h1>
        Manage Consultant
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/SecureAdmin/DashBoard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Manage Role</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        @if (@Model.IsShowMessage == 1)
        {
            if (@Model.MessageClass.ToLower() == "MsgGreen".ToLower())
            {
                <div class="alert alert-success alert-dismissable">
                    <i class="fa fa-check"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        &times;
                    </button>
                    @Model.Message
                </div>
            }
            else if (@Model.MessageClass.ToLower() == "MsgRed".ToLower())
            {
                <div class="alert alert-danger alert-dismissable">
                    <i class="fa fa-ban"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        &times;
                    </button>
                    @Model.Message
                </div>
            }
            else
            {
                <div class="alert alert-success alert-dismissable">
                    <i class="fa fa-check"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        &times;
                    </button>
                    @Model.Message
                </div>
            }
        }
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">
                    Edit Consultant
                </h3>
            </div>
            <div class="top-buttons-container">
                <a href="@Url.Content("~/SecureAdmin/Consultant/")" class="btn btn-success">View</a>
                <a href="@Url.Content("~/SecureAdmin/Consultant/Add")" class="btn btn-info">Add</a>
            </div>
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m => m.ConsultantId)
                <input type="hidden" value="@Model.ConsultantId" />
                <div class="box-body" style="width: 50%;">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConsultantName)
                        <span class="asterisk">*</span>
                        @Html.TextBoxFor(m => m.ConsultantName, new { @class = "form-control", @placeholder = "Enter consultant name" })
                        @Html.ValidationMessageFor(m => m.ConsultantName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        <span class="asterisk">*</span>
                        @Html.PasswordFor(m => m.Password, new { @value = Model.Password, @class = "form-control", @placeholder = "Enter password" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.StoreId)
                        <span class="asterisk">*</span>
                        @Html.DropDownListFor(m => m.StoreId, new SelectList(Canturi.Models.BusinessHelper.CommonHelper.CommonData.ListStores(), "Value", "Text"), "Select store", new { @id = "ddlStore", @name = "my-dropdown", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.StoreId)
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">
                        Submit
                    </button>
                    <a href="@Url.Content("~/SecureAdmin/Consultant")" class="btn btn-default">Cancel</a>
                </div>
            }
        </div>
    </div>
</section>
@section scripts{
    <script src="@Url.Content("~/Areas/SecureAdmin/Content/plugins/jQuery/jQuery-2.1.4.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
}