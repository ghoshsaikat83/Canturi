@using System.Data
@{
    ViewBag.Title = "Request Order Details";
    Layout = "~/Areas/SecureAdmin/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .style1 {
        height: 30px;
    }

    .style2 {
        height: 39px;
    }

    .style3 {
        height: 127px;
    }
</style>
<section class="content-header">
    <h1>
        Availability requests 
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/SecureAdmin/DashBoard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Availability requests </li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">
                  
                </h3>
            </div>
            <div class="top-buttons-container">
                <a href="@Url.Content("~/SecureAdmin/report/RequestAvailability")" class="btn btn-success">Back</a>                
            </div>
            @{
                DataTable dtRequestOrderDetails = ViewBag.RequestOrderDetails as DataTable;
                if (dtRequestOrderDetails != null)
                {
                    if (dtRequestOrderDetails.Rows.Count != 0)
                    {
                        <div class="box-body report-details">
                            <div class="form-group">
                                @Html.Label("Customer Name: ") @dtRequestOrderDetails.Rows[0]["CustomerName"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("Consultant Email: ") @dtRequestOrderDetails.Rows[0]["ConsultantEmail"].ToString()
                            </div>
                            @*<div class="form-group">
                                @Html.Label("Order #: ") @dtRequestOrderDetails.Rows[0]["OrderNumber"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("JCS Customer#: ") @dtRequestOrderDetails.Rows[0]["JcsCustomerNumber"].ToString()
                            </div>*@
                            <div class="form-group">
                                @Html.Label("Diamond Availability Due Date: ") @dtRequestOrderDetails.Rows[0]["DueDate"].ToString()
                            </div>
                            <div class="form-group heading">DIAMOND DETAILS</div>
                            <div class="form-group">
                                @Html.Label("Shape: ") @dtRequestOrderDetails.Rows[0]["Shape"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("Color: ") @dtRequestOrderDetails.Rows[0]["Color"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("Clarity: ") @dtRequestOrderDetails.Rows[0]["Clarity"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("Cut: ") @dtRequestOrderDetails.Rows[0]["Cut"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("Polish: ") @dtRequestOrderDetails.Rows[0]["Polish"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("Fluorescence: ") @dtRequestOrderDetails.Rows[0]["Flourescence"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("Measurements: ") @dtRequestOrderDetails.Rows[0]["Measurements"].ToString().Replace("*","x")
                            </div>
                            <div class="form-group">
                                @Html.Label("LAB: ") @dtRequestOrderDetails.Rows[0]["Lab"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("Cert#: ") @dtRequestOrderDetails.Rows[0]["CertificateNumber"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("LOT: ") @dtRequestOrderDetails.Rows[0]["LotNumber"].ToString()
                            </div>
                            <div class="form-group">
                                @Html.Label("Symmetry: ") @dtRequestOrderDetails.Rows[0]["Symmetry"].ToString()
                            </div>
                            <div class="form-group heading">
                                PRICE
                            </div>
                            <div class="form-group">
                                @Html.Label("Diamond Price: ") @dtRequestOrderDetails.Rows[0]["DiamondPrice"].ToString()
                            </div>
                            @*<div class="form-group">
                                @Html.Label("Design Price: ") @dtRequestOrderDetails.Rows[0]["DesignPrice"].ToString()
                            </div>*@

                            <div class="form-group">
                                @Html.Label("Comment: ") @dtRequestOrderDetails.Rows[0]["Comment"].ToString()
                            </div>

                        </div>
                        <div class="box-footer" style="padding-left:300px;">
                            <a href="@Url.Content("~/secureadmin/report/RequestAvailability")" class="btn btn-default">Back</a>
                        </div>
                    }
                }

            }
        </div>
    </div>
</section>